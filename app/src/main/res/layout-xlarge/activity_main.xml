<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BACKGROUND"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/image_description"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/posto_gasolina" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="#87C4CB"
            android:textSize="70sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            />

        <EditText
            android:id="@+id/edGasolina"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ACACAC"
            android:ems="10"
            android:hint="@string/gasoline_placeholder"
            android:inputType="numberDecimal"
            android:paddingHorizontal="24px"
            style="@style/TEXTCOLORINPUT"
            android:textColorHint="#AAA"
            android:layout_marginTop="20dp"
            android:textSize="48dp"
            />

        <EditText
            android:id="@+id/edAlcool"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:backgroundTint="#ACACAC"
            android:ems="10"
            android:hint="@string/alcohol_placeholder"
            android:inputType="numberDecimal"
            android:paddingHorizontal="24px"
            android:textColorHint="#AAA"
            android:textSize="48dp"/>

        <Switch
            android:id="@+id/swPercentual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="180dp"
            android:layout_marginTop="12dp"
            android:text="75%"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:textSize="18dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            />

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="40dp"
            android:backgroundTint="#F7842D"
            android:text="@string/button_name"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choice_presentation"
            android:layout_gravity="center_horizontal"
            android:textSize="44dp"
            style="@style/TEXTCOLOR"
            />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="-----"
            android:textColor="#87C4CB"
            android:textSize="44dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>